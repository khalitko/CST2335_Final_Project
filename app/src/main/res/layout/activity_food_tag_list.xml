<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food.SearchTag">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyToolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="2dp"
        android:background="#7CC242"
        app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
        app:title="EDAMAM"
        app:titleTextAppearance="@style/ToolbarTextAppearance.Title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/title"
        android:text="Tag List"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_below="@id/toolbar"/>
    <ListView
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tagList"
        android:layout_below="@id/title">
    </ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Food Items"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:id="@+id/foodTitle"
        android:layout_below="@id/tagList"/>
    <ListView
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodList"
        android:layout_below="@id/foodTitle"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calorieCal"
        android:padding="10sp"
        android:gravity="left"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"
      />


</RelativeLayout>