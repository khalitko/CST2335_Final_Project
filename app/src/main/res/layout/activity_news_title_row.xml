<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/article_image"
            android:layout_alignBottom="@+id/article_image"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/article_title"
            android:layout_alignRight="@+id/article_title"
            android:layout_alignBottom="@+id/article_title"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </RelativeLayout>


</LinearLayout>